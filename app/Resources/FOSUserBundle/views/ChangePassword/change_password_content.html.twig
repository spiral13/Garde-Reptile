{% trans_default_domain 'FOSUserBundle' %}

<div class="container mt-5 p-4 border rounded">

    <h3 class="mt-2 mb-4">Modifiez votre mot de passe</h3>

    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        {#{{ form_row(form) }}#}

        <div class="form-group">{{ form_widget(form, {'attr': {'class':'form-control'}})  }}</div>
        {#<div class="form-group">{{ form_row(form.new_password, {'attr': {'class':'form-control'}})  }}</div>#}

        <div>
            <input class="btn btn-primary btn-lg" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        </div>
    {{ form_end(form) }}

</div>