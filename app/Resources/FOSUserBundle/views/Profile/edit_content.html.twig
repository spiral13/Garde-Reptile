{% trans_default_domain 'FOSUserBundle' %}



<div class="container mt-5 p-4 border rounded">

    <h3 class="mt-2 mb-4">Modifiez votre profil</h3>

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

    {#{{ form_widget(form) }}#}

    <div class="form-group">{{ form_row(form.username, {'attr': {'class':'form-control'}}) }}</div>

    <div class="form-group">{{ form_row(form.email, {'attr': {'class':'form-control'}})  }}</div>

    <div class="form-group">{{ form_row(form.ville, {'attr': {'class':'form-control'}})  }}</div>

    <div class="form-group">{{ form_row(form.description, {'attr': {'class':'form-control'}})  }}</div>

    {% block fos_user_content %}
        {% include "@FOSUser/ChangePassword/change_password_content.html.twig" %}
    {% endblock fos_user_content %}


    <br>

    {#<div>#}
        {#<input type="submit" value="{{ 'profile.edit.submit'|trans }}" />#}
    {#</div>#}
{{ form_end(form) }}
</div>