{% extends 'base.html.twig' %}

{% block body %}

    <h3 class="mt-5 ml-5">Page Liste des Offres</h3>
    <hr>

    {% for ad in ads %}
        <div class="container col-lg-6" id="listAd">
            <div id="headads">
                <a href="{{  path('ad_id', {'id': ad.id}) }}">
                    <h4 class="text-info" id="adsTitle">{{ad.title}}</h4>
                </a>
                <img src="https://images.unsplash.com/photo-1518321544536-00087d6ccea1?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=200&h=200&fit=crop&ixid=eyJhcHBfaWQiOjF9&s=59aad79163e6ce95775c3326f7693ec8"
                     width="80" height="80">
            </div>
            <p>Cr√©er par : {{ ad.user.username }}</p>
            <p class="text-warning font-italic" id="ville">Ville : {{ad.ville}}</p>
            <p class="">{{ad.content}}</p>
            <p class="badge badge-danger mt-3">{{ad.service}}</p>
        </div>
        {#{{ dump(ad.id) }}#}
    {% endfor %}


{% endblock %}