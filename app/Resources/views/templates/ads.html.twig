{% extends 'base.html.twig' %}

{% block body %}

    <h3 class="mt-5 ml-5">Toutes les annonces publiées :</h3>
    <hr id="hr">

    {% for ad in ads %}
        <div class="container col-lg-6" id="listAd">
            <div id="headads">
                <a href="{{  path('ad_id', {'id': ad.id}) }}">
                    <h4 class="text-info" id="adsTitle">{{ad.title}}</h4>
                </a>
                <img src="{{ asset('uploads/images/' ~ ad.user.image) }}" class="d-none d-sm-block" id="avatar">
            </div>
            <p class="text-primary">Publiée par : {{ ad.user.username}} <span class="text-secondary">le {{ ad.date|date("d/m/Y") }}</span></p>
            <p></p>
            <p class="text-warning font-italic" id="ville">Ville : {{ad.ville}}</p>
            <p class="">{{ad.content}}</p>
            <p class="badge badge-danger mt-3">{{ad.service}}</p>
        </div>

    {% endfor %}


{% endblock %}